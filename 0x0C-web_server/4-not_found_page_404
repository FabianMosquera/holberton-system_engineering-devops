  
#!/usr/bin/env bash
# install nginx to create html pages - 404
string_to_replace="\\\tlocation /redirect_me {\n\t\t return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n"
err_replace="\\\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /usr/share/nginx/html;\n\t\tinternal;\n\t}\n"
src="/etc/nginx/sites-available/default"
apt-get -y update
apt-get -y install nginx
sudo service nginx start
echo "Holberton School" > /var/www/html/index.html
sudo sed -i "30i $string_to_replace" $src
echo "Ceci n'est pas une page" > /var/www/html/404.html
sudo sed -i "48i $err_replace" $src
sudo service nginx restart